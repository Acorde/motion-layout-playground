<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@id/end"
        motion:constraintSetStart="@id/start">

        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/recycler_view_list"
            motion:touchAnchorSide="top" />

    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint android:id="@+id/iv_backdrop">
            <Layout
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_height="@dimen/dimen_backdrop_image" />
        </Constraint>


        <Constraint android:id="@+id/fab_stream">
            <Layout
                motion:layout_constraintBottom_toBottomOf="@+id/iv_backdrop"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintTop_toBottomOf="@+id/iv_backdrop"
                motion:layout_height="wrap_content"
                motion:layout_marginEnd="8dp"
                motion:layout_marginTop="8dp"
                motion:layout_width="wrap_content" />
        </Constraint>


    </ConstraintSet>
    <ConstraintSet android:id="@+id/end">


        <Constraint android:id="@+id/iv_backdrop">
            <Layout
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_height="30dp" />
        </Constraint>

        <Constraint android:id="@+id/fab_stream">
            <PropertySet motion:visibility="gone" />
        </Constraint>


    </ConstraintSet>

</MotionScene>