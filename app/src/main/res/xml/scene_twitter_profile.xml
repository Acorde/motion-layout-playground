<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@id/collapsed"
        app:constraintSetStart="@id/expanded">

        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/recycler_view_list"
            app:touchAnchorSide="top"/>


        <KeyFrameSet>
            <KeyAttribute
                android:scaleX="0.5"
                android:scaleY="0.5"
                app:framePosition="20"/>


            <KeyAttribute
                android:alpha="0"
                app:framePosition="90"/>

            <KeyAttribute
                android:alpha="1"
                app:framePosition="100"/>

            <KeyAttribute
                android:alpha="0"
                app:framePosition="90"/>

            <KeyAttribute
                android:alpha="1"
                app:framePosition="100"/>


        </KeyFrameSet>

    </Transition>

    <!-- Original State/ Scroll down-->
    <ConstraintSet android:id="@+id/expanded">
        <Constraint android:id="@+id/toolbar_image">
            <Layout
                android:layout_height="@dimen/dimen_header_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <PropertySet app:alpha="255"/>

            <Transform app:elevation="2dp"/>
        </Constraint>

        <Constraint android:id="@+id/background_view">
            <Layout
                android:layout_height="@dimen/dimen_profile_header_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </Constraint>

        <Constraint android:id="@+id/iv_profile_image">
            <Layout
                android:layout_width="@dimen/dimen_image_view"
                android:layout_height="@dimen/dimen_image_view"
                android:layout_marginStart="@dimen/dimen_standard"
                android:layout_marginTop="@dimen/dimen_small"
                android:src="@drawable/profile_pic"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_image"/>

            <Transform
                android:translationY="0dp"
                app:elevation="2dp"/>

        </Constraint>

        <Constraint android:id="@+id/btn_edit_profile">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginEnd="@dimen/dimen_small"
                android:layout_marginTop="@dimen/dimen_standard"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_image"/>

            <PropertySet android:visibility="visible"/>

            <Transform android:translationY="0dp"/>

        </Constraint>

        <Constraint android:id="@+id/tv_user_name_collapsed">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:scaleX="1"
                android:text="Thomas Kioko"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/toolbar_image"/>

            <Transform android:elevation="4dp"/>

            <PropertySet android:visibility="invisible"/>
        </Constraint>


        <Constraint android:id="@+id/tv_tweets_count">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toStartOf="@+id/tv_user_name_collapsed"
                app:layout_constraintTop_toBottomOf="@+id/tv_user_name_collapsed"/>

            <Transform
                android:scaleX="1"
                android:elevation="6dp"/>

            <PropertySet android:visibility="invisible"/>
        </Constraint>

        <Constraint android:id="@+id/tab_layout">
            <Layout
                android:id="@id/constraint_bio_metadata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_profile_image"/>

            <Transform android:translationY="0dp"/>

        </Constraint>

        <Constraint android:id="@+id/tab_layout">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="@dimen/dimen_profile_header_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/background_view"/>

            <Transform android:elevation="0dp"/>
        </Constraint>

    </ConstraintSet>

    <!-- Modified State/ Scroll Up-->
    <ConstraintSet android:id="@+id/collapsed">

        <Constraint android:id="@+id/toolbar_image">
            <Layout
                android:layout_height="80dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="35dp"/>

            <PropertySet android:alpha="0"/>

            <Transform android:elevation="4dp"/>

        </Constraint>

        <Constraint android:id="@+id/imageView">
            <Layout
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="35dp"/>

        </Constraint>

        <Constraint android:id="@+id/iv_more">
            <Layout
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="35dp"/>

        </Constraint>

        <Constraint android:id="@+id/background_view">
            <Layout
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="80dp"
                android:layout_marginTop="35dp"/>
        </Constraint>


        <Constraint android:id="@+id/iv_profile_image">
            <Layout
                android:layout_width="@dimen/dimen_image_view"
                android:layout_height="@dimen/dimen_image_view"
                android:layout_marginStart="@dimen/dimen_standard"
                android:layout_marginTop="@dimen/dimen_small"
                android:elevation="2dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_image"/>

            <Transform android:translationY="-246dp"/>

        </Constraint>

        <Constraint android:id="@+id/btn_edit_profile">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginEnd="@dimen/dimen_small"
                android:layout_marginTop="@dimen/dimen_standard"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_image"/>

            <Transform android:translationY="-246dp"/>

        </Constraint>

        <Constraint android:id="@+id/tv_user_name_collapsed">
            <Layout
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/toolbar_image"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"/>

            <PropertySet android:visibility="visible"/>

            <Transform
                android:scaleX="1"
                android:elevation="8dp"/>

        </Constraint>

        <Constraint android:id="@+id/tv_tweets_count">
            <Layout
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/tv_user_name_collapsed"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"/>

            <PropertySet android:visibility="visible"/>

            <Transform
                android:scaleX="1"
                android:elevation="6dp"/>

        </Constraint>

        <Constraint android:id="@+id/constraint_bio_metadata">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_profile_image"/>

            <Transform android:translationY="-246dp"/>

        </Constraint>

        <Constraint android:id="@+id/tab_layout">
            <Layout
                android:id="@id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="60dp"
                android:elevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/background_view"/>
        </Constraint>
    </ConstraintSet>

</MotionScene>